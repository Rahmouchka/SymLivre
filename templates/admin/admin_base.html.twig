                        <span class="d-none d-md-inline">Wishlist</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- En-tête principal -->
    <header class="main-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <a class="logo" href="{{ path('admin_livre_index') }}">
                        <i class="bi bi-book-half logo-icon"></i>
                        <span>Read<span>Up</span></span>
                    </a>
                </div>
                <div class="col-md-6">
                    <!-- Espace pour la barre de recherche dans index.html.twig -->
                </div>
                <div class="col-md-3 d-flex justify-content-end">
                    <a href="#" class="btn btn-outline-primary cart-btn">
                        <i class="bi bi-cart3 cart-icon"></i>
                        <span>Panier</span>
                        <span class="cart-count">0</span>
                    </a>
                </div>
            </div>
        </div>
    </header>
    <!-- Navigation par catégories -->
    <nav class="category-nav">
        <div class="container">
            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a class="nav-link active" href="{{ path('admin_livre_index') }}">
                        <i class="bi bi-book me-1"></i> Livres
