{% extends "base.html.twig" %}

{% block title %}
    ReadUp - Découvrez notre catalogue
{% endblock %}

{% block stylesheets %}
    <style>
        /* Styles pour la barre de recherche */
        .search-container {
            background: linear-gradient(135deg, #ffb5a7 0%, #ffd155 100%);
            border-radius: 10px;
            padding: 30px;
            margin-bottom: 40px;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }

        .search-title {
            color: var(--dark);
            font-weight: 600;
            margin-bottom: 20px;
            font-family: 'Nunito', sans-serif;
            text-align: center;
            font-size: 1.8rem;
        }

        .search-bar {
            position: relative;
        }

        .search-bar .form-control {
            height: 54px;
            border-radius: 27px;
            padding-left: 50px;
            background-color: white;
            border: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            font-size: 1rem;
        }

        .search-bar .search-icon {
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--gray);
            font-size: 1.2rem;
        }

        .search-btn {
            height: 54px;
            border-radius: 27px;
            background-color: #8bd3d6;
            border: none;
            font-weight: 500;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s;
            color: var(--dark);
        }

        .search-btn:hover {
            background-color: #b8e0d2;
            transform: translateY(-2px);
        }

        .reset-btn {
            height: 54px;
            border-radius: 27px;
            background-color: rgba(255, 255, 255, 0.2);
            border: none;
            color: var(--dark);
            font-weight: 500;
            transition: all 0.3s;
        }

        .reset-btn:hover {
            background-color: rgba(255, 255, 255, 0.3);
        }

        /* Styles pour les cartes de livres */
        .section-title {
            position: relative;
            font-family: 'Nunito', sans-serif;
            font-weight: 700;
            margin-bottom: 30px;
            display: inline-block;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 80px;
            height: 4px;
            background-color: #8bd3d6;
        }

        .book-card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            transition: all 0.3s ease;
            height: 100%;
        }

        .book-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

        .book-card .card-img-container {
            height: 250px;
            overflow: hidden;
            position: relative;
            background-color: #fff9f5;
        }

        .book-card img {
            height: 100%;
            width: 100%;
            object-fit: contain;
            padding: 20px;
            transition: all 0.5s ease;
        }

        .book-card:hover img {
            transform: scale(1.05);
        }

        .book-card .price-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background-color: #ffb5a7;
            color: var(--dark);
            border-radius: 50px;
            padding: 8px 15px;
            font-weight: 600;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .book-card .card-body {
            padding: 20px;
        }

        .book-card .card-title {
            font-weight: 600;
            margin-bottom: 10px;
            font-size: 1.1rem;
            color: #2D3436;
        }

        .book-card .card-text {
            color: #95A5A6;
            font-size: 0.9rem;
        }

        .book-card .card-footer {
            background-color: white;
            border-top: 1px solid rgba(0, 0, 0, 0.05);
            padding: 15px 20px;
        }

        .book-card .btn-action {
            border-radius: 50px;
            padding: 8px 15px;
            font-size: 0.85rem;
            font-weight: 500;
            transition: all 0.3s;
        }

        .book-card .btn-action:hover {
            transform: translateY(-2px);
        }

        .book-card .btn-details {
            color: #8bd3d6;
            border-color: #8bd3d6;
        }

        .book-card .btn-details:hover {
            background-color: #8bd3d6;
            color: var(--dark);
        }

        .book-card .btn-edit {
            color: #b8e0d2;
            border-color: #b8e0d2;
        }

        .book-card .btn-edit:hover {
            background-color: #b8e0d2;
            color: var(--dark);
        }

        .book-card .btn-delete {
            color: #ffb5a7;
            border-color: #ffb5a7;
        }

        .book-card .btn-delete:hover {
            background-color: #ffb5a7;
            color: var(--dark);
        }

        /* Styles pour la bannière promotionnelle */
        .promo-banner {
            background: linear-gradient(135deg, #8bd3d6 0%, #b8e0d2 100%);
            border-radius: 10px;
            padding: 40px;
            margin-top: 60px;
            color: var(--dark);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }

        .promo-banner h3 {
            font-family: 'Nunito', sans-serif;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .promo-banner .form-control {
            height: 54px;
            border-radius: 27px 0 0 27px;
            border: none;
            padding-left: 20px;
        }

        .promo-banner .btn {
            border-radius: 0 27px 27px 0;
            background-color: #ffb5a7;
            border: none;
            height: 54px;
            font-weight: 500;
            color: var(--dark);
        }

        .promo-banner .btn:hover {
            background-color: #fec89a;
        }

        /* Styles pour la pagination */
        .pagination {
            margin-top: 40px;
        }

        .pagination .page-link {
            color: #8bd3d6;
            border-color: #dee2e6;
            margin: 0 5px;
            border-radius: 5px;
        }

        .pagination .page-item.active .page-link {
            background-color: #8bd3d6;
            border-color: #8bd3d6;
            color: var(--dark);
        }

        .pagination .page-link:hover {
            background-color: #f0f0f0;
            color: #8bd3d6;
        }

        /* Styles pour les alertes */
        .alert-info {
            background-color: rgba(139, 211, 214, 0.1);
            border-color: rgba(139, 211, 214, 0.2);
            color: #8bd3d6;
        }

        .alert-warning {
            background-color: rgba(255, 209, 102, 0.1);
            border-color: rgba(255, 209, 102, 0.2);
            color: #ffd166;
        }

        /* Animation pour les cartes */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-card {
            animation: fadeInUp 0.5s ease forwards;
            opacity: 0;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Barre de recherche stylisée -->
    <div class="search-container">
        <h4 class="search-title">Trouvez votre prochain livre préféré</h4>
        <form method="get" action="{{ path('app_livre_index') }}">
            <div class="row g-3">
                <div class="col-md-8">
                    <div class="search-bar">
                        <i class="bi bi-search search-icon"></i>
                        <input type="text" name="search" class="form-control" placeholder="Rechercher par titre, auteur, éditeur..." value="{{ searchTerm ?? '' }}">
                    </div>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn search-btn w-100">
                        <i class="bi bi-search me-2"></i>Rechercher
                    </button>
                </div>
                {% if searchTerm %}
                    <div class="col-md-12 text-center mt-2">
                        <a href="{{ path('app_livre_index') }}" class="btn reset-btn">
                            <i class="bi bi-x-circle me-2"></i>Effacer la recherche
                        </a>
                    </div>
                {% endif %}
            </div>
        </form>
    </div>

    <!-- En-tête de la section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title">Notre catalogue</h2>
        <a href="{{ path('app_livre_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Ajouter un livre
        </a>
    </div>

    <!-- Message de résultats de recherche -->
    {% if searchTerm %}
        <div class="alert alert-info mb-4">
            <i class="bi bi-info-circle me-2"></i>
            Résultats de recherche pour "<strong>{{ searchTerm }}</strong>"
            ({{ livres.getTotalItemCount }} livre{% if livres.getTotalItemCount > 1 %}s{% endif %} trouvé{% if livres.getTotalItemCount > 1 %}s{% endif %})
        </div>
    {% endif %}

    <!-- Grille de livres -->
    {% if livres|length > 0 %}
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mb-4">
            {% for livre in livres %}
                <div class="col animate-card" style="animation-delay: {{ loop.index0 * 0.05 }}s">
                    <div class="book-card shadow-sm">
                        <div class="card-img-container">
                            <img src="{{ livre.image }}" alt="Couverture {{ livre.titre }}">
                            <span class="price-badge">{{ livre.prix }} DT</span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-truncate">{{ livre.titre }}</h5>
                            <p class="card-text mb-1">{{ livre.editeur }}</p>
                            <p class="card-text"><small class="text-muted">Édité le {{ livre.dateEdition|date('d/m/Y') }}</small></p>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_livre_show', {'id': livre.id}) }}" class="btn btn-outline-primary btn-action btn-details" data-bs-toggle="tooltip" title="Voir les détails">
                                    <i class="bi bi-eye me-1"></i> Détails
                                </a>
                                <div class="btn-group">
                                    <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" class="btn btn-outline-success btn-action btn-edit" data-bs-toggle="tooltip" title="Modifier">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-danger btn-action btn-delete" data-bs-toggle="modal" data-bs-target="#deleteModal{{ livre.id }}" title="Supprimer">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal de confirmation de suppression -->
                <div class="modal fade" id="deleteModal{{ livre.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ livre.id }}" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel{{ livre.id }}">Confirmer la suppression</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>Êtes-vous sûr de vouloir supprimer le livre"<strong>{{ livre.titre }}</strong>" ?</p>
                                <p class="text-danger"><small>Cette action est irréversible.</small></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                <form method="post" action="{{ path('app_livre_delete', {'id': livre.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livre.id) }}">
                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i> Aucun livre trouvé.
        </div>
    {% endif %}

    <!-- Pagination -->
    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(livres) }}
    </div>

    <!-- Bannière promotionnelle -->
    <div class="promo-banner">
        <div class="row align-items-center">
            <div class="col-lg-7 mb-4 mb-lg-0">
                <h3>Restez informé des nouveautés</h3>
                <p class="mb-0">Inscrivez-vous à notre newsletter pour recevoir en avant-première nos dernières sorties et offres exclusives.</p>
            </div>
            <div class="col-lg-5">
                <div class="input-group">
                    <input type="email" class="form-control" placeholder="Votre adresse email">
                    <button class="btn btn-primary" type="button">S'inscrire</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialisation des tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            // Animation des cartes au défilement
            function animateOnScroll() {
                const cards = document.querySelectorAll('.animate-card');
                cards.forEach(card => {
                    const cardPosition = card.getBoundingClientRect().top;
                    const screenPosition = window.innerHeight / 1.2;

                    if (cardPosition < screenPosition) {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }
                });
            }

            // Initialiser l'animation
            animateOnScroll();

            // Animer au défilement
            window.addEventListener('scroll', animateOnScroll);
        });
    </script>
{% endblock %}