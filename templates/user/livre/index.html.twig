{% extends 'user/user_base.html.twig' %}

{% block title %}ReadUp - Catalogue{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .book-card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            transition: all 0.3s ease;
            height: 100%;
        }

        .book-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

        .book-card .card-img-container {
            height: 250px;
            overflow: hidden;
            position: relative;
            background-color: #fff9f5;
        }

        .book-card img {
            height: 100%;
            width: 100%;
            object-fit: contain;
            padding: 20px;
            transition: all 0.5s ease;
        }

        .book-card:hover img {
            transform: scale(1.05);
        }

        .book-card .price-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background-color: #ffb5a7;
            color: var(--dark);
            border-radius: 50px;
            padding: 8px 15px;
            font-weight: 600;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .book-card .card-body {
            padding: 20px;
        }

        .book-card .card-title {
            font-weight: 600;
            margin-bottom: 10px;
            font-size: 1.1rem;
            color: #2D3436;
        }

        .book-card .card-text {
            color: #95A5A6;
            font-size: 0.9rem;
        }

        .book-card .card-footer {
            background-color: white;
            border-top: 1px solid rgba(0, 0, 0, 0.05);
            padding: 15px 20px;
        }

        .section-title {
            position: relative;
            font-family: 'Nunito', sans-serif;
            font-weight: 700;
            margin-bottom: 30px;
            display: inline-block;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 80px;
            height: 4px;
            background-color: #8bd3d6;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-card {
            animation: fadeInUp 0.5s ease forwards;
            opacity: 0;
        }

        /* Barre de recherche améliorée */
        .search-container {
            background-color: var(--light);
            border-radius: 10px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

        .search-container .input-group-text {
            background-color: white;
            border-right: none;
        }

        .search-container .form-control {
            border-left: none;
        }

        /* Pagination personnalisée */
        .pagination .page-item.active .page-link {
            background-color: var(--primary);
            border-color: var(--primary);
            color: var(--dark);
        }

        .pagination .page-link {
            color: var(--dark);
        }
    </style>
{% endblock %}

{% block user_body %}
    <!-- Barre de recherche -->
    <div class="search-container">
        <form method="get" action="{{ path('user_livre_index') }}">
            <div class="input-group">
                <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                <input type="text" name="search" class="form-control form-control-lg"
                       placeholder="Rechercher un livre par titre, auteur ou éditeur..."
                       value="{{ searchTerm ?? '' }}">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-search me-2"></i>Rechercher
                </button>
            </div>
        </form>
    </div>

    <!-- En-tête de la section -->
    <h2 class="section-title">
        {% if searchTerm %}
            Résultats de recherche
        {% else %}
            Notre sélection de livres
        {% endif %}
    </h2>

    <!-- Message de résultats de recherche -->
    {% if searchTerm %}
        <div class="alert alert-info mb-4">
            <i class="bi bi-info-circle me-2"></i>
            Vous avez recherché "<strong>{{ searchTerm }}</strong>"
            ({{ livres.getTotalItemCount }} livre{% if livres.getTotalItemCount > 1 %}s{% endif %} trouvé{% if livres.getTotalItemCount > 1 %}s{% endif %})
        </div>
    {% endif %}

    <!-- Grille de livres -->
    {% if livres|length > 0 %}
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mb-4">
            {% for livre in livres %}
                <div class="col animate-card" style="animation-delay: {{ loop.index0 * 0.05 }}s">
                    <div class="book-card shadow-sm">
                        <div class="card-img-container">
                            {% if livre.image %}
                                <img src="{{ livre.image }}" alt="Couverture {{ livre.titre }}">
                            {% else %}
                                <div class="d-flex align-items-center justify-content-center h-100">
                                    <i class="bi bi-book text-secondary" style="font-size: 3rem;"></i>
                                </div>
                            {% endif %}
                            <span class="price-badge">{{ livre.prix|number_format(2, ',', ' ') }} €</span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">{{ livre.titre }}</h5>
                            <p class="card-text mb-1">{{ livre.editeur }}</p>
                            <p class="card-text"><small class="text-muted">Édité le {{ livre.dateEdition ? livre.dateEdition|date('d/m/Y') : 'date inconnue' }}</small></p>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('user_livre_show', {'id': livre.id}) }}" class="btn btn-outline-primary btn-sm" data-bs-toggle="tooltip" title="Voir les détails">
                                    <i class="bi bi-eye me-1"></i> Détails
                                </a>
                                <button class="btn btn-primary btn-sm btn-add-to-cart" data-book-id="{{ livre.id }}" data-bs-toggle="tooltip" title="Ajouter au panier">
                                    <i class="bi bi-cart-plus me-1"></i> Ajouter
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i> Aucun livre trouvé.
            {% if searchTerm %}
                <a href="{{ path('user_livre_index') }}" class="alert-link ms-2">Afficher tous les livres</a>
            {% endif %}
        </div>
    {% endif %}

    <!-- Pagination -->
    {% if livres|length > 0 %}
        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(livres) }}
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialisation des tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Gestion de l'ajout au panier
            const addToCartButtons = document.querySelectorAll('.btn-add-to-cart');
